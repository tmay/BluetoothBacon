<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" android:layout_margin="25dp">

    <ImageView
        android:id="@+id/img_device_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/txt_device_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" android:text="@string/lbl_device_address"/>

        <TextView android:id="@+id/txt_device_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" android:text="@string/lbl_rssi"/>
    </LinearLayout>
</LinearLayout>